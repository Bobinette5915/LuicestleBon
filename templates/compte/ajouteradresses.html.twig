{% extends 'base.html.twig' %}

{% block title %}Ajouter une adresse{% endblock %}

{% block body %}
<div id="concept" class="container-fluid p-3">
		<div class="row text-center pt-5">
			<h1>Ajouter une adresse</h1>
		
		</div>
		<div id="conceptExplain" class="col-md-6 mx-auto mb-4 p-5">
			{{ form_start(form) }}

            <div class="col-md-12">
					{{ form_row(form.Nomadresse) }}
			</div>
			<div class="row">
				<div class="col-md-6">
					{{ form_row(form.Nom) }}
				</div>
				<div class="col-md-6">
					{{ form_row(form.Prenom) }}
				</div>
			</div>
            <div class="col-md-12">
					{{ form_row(form.Adresse) }}
			</div>
            <div class="row">
				
				<div class="col-md-12">
					{{ form_row(form.Ville) }}
				</div>
			</div>
			{{ form_row(form.Pays) }}
			<div class="row">
				<div class="col-md-12">
					{{ form_row(form.Tel) }}
				</div>				
			</div>
			<div class="col-md-6 mx-auto">
				{{ form_row(form.submit) }}
			</div>
			{{ form_end(form) }}
		</div>
	</div>

{% endblock %}
